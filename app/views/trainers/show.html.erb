<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if @trainer.id == current_trainer.id%>
	<%= button_to "Let's get this bread by creating a Pokemon!", pokemons_new_path, :class => "button medium", :method => :get %>
<% end %>
<h4>Owned Pokemon:</h4>
<% @trainer.pokemons.each do |pokemon| %>
  <p>Pokemon Name: <%= pokemon.name %></p>
  <p>Pokemon Level: <%= pokemon.level %></p>
  <p>Pokemon Health: <%= pokemon.health %></p>
  <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
  <% if current_trainer %>
  	<% if @pokemon.ndex %>
    	<%= image_tag("pokemon/#{@pokemon.ndex}.png", alt: "pokemon") %>
      <% end %>
  <% end %>
<% end %>
	